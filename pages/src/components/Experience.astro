---
const jobs = [
  {
    role: "Data Scientist – Quality Management Intern",
    company: "Mammut AG",
    location: "Seon",
    period: "Mar – Aug 2025",
    description: [
      "Perform rigorous stress tests on outdoor equipment and extract insights from performance data with key metrics",
      "Model results and create dashboards to guide product improvements across engineering and testing departments",
      "Explore climbing rope technology and product development trends as part of an in-depth master's thesis project"
    ]
  },
  {
    role: "Data Science Intern",
    company: "ON AG",
    location: "Zurich",
    period: "Jul – Dec 2024",
    description: [
      "Train ML models to predict customs HSCodes from product specs with improved accuracy and standardization",
      "Clean and process product datasets while ensuring consistency and reliability across attributes and codes",
      "Coordinate cross-functional integration to deploy the model into customs operations with scalable results"
    ]
  },
  {
    role: "Physical Education Teacher",
    company: "Colegio El Pinar",
    location: "Malaga",
    period: "Oct 2020 – Jun 2021",
    description: [
      "Design and lead dynamic PE lessons to improve student physical literacy and confidence across age levels",
      "Resolve classroom conflicts using empathy and communication while supporting academic and social growth",
      "Create safe and inclusive spaces that foster movement, teamwork, and personal development for all learners"
    ]
  }
];
---

<section id="experience" class="px-4 py-20 max-w-4xl mx-auto">
  <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-12 text-center">Work Experience</h2>

  <div class="relative border-l border-gray-200 dark:border-gray-700 ml-4 md:ml-6 space-y-12">
    {jobs.map((job) => (
      <div class="mb-10 ml-8 relative group">
        <!-- Dot -->
        <span class="absolute -left-12 top-1.5 flex items-center justify-center w-8 h-8 bg-gray-100 dark:bg-gray-800 rounded-full ring-8 ring-white dark:ring-gray-900 group-hover:bg-gray-200 dark:group-hover:bg-gray-700 transition-colors">
           <div class="w-3 h-3 bg-gray-400 dark:bg-gray-500 rounded-full group-hover:bg-gray-600 dark:group-hover:bg-gray-300 transition-colors"></div>
        </span>
        
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-2 mb-2">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">{job.role}</h3>
          <span class="font-medium text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-800 px-3 py-1 rounded-lg items-center whitespace-nowrap w-fit">{job.period}</span>
        </div>
        
        <div class="text-lg font-semibold text-gray-700 dark:text-gray-300 mb-2">
          {job.company} <span class="text-gray-400 dark:text-gray-500 font-normal">• {job.location}</span>
        </div>
        
        <ul class="list-disc ml-5 space-y-2 text-gray-600 dark:text-gray-400 text-lg leading-relaxed">
          {job.description.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
