---
import { getCollection } from 'astro:content';
import { getImage } from 'astro:assets';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => a.data.order - b.data.order);

// Helper to make paths relative for standalone file access
const fixPath = (path) => path.startsWith('/') ? path.slice(1) : path;

// Pre-process all images to WebP and fix paths
const projects = await Promise.all(sortedProjects.map(async (project) => {
  const thumbnail = await getImage({ src: project.data.thumbnail, format: 'webp' });
  const banner = await getImage({ src: project.data.banner, format: 'webp' });
  
  let brandLogo = null;
  if (project.data.brandLogo) {
    brandLogo = await getImage({ src: project.data.brandLogo, format: 'webp' });
  }

  let gallery = [];
  if (project.data.gallery) {
    gallery = await Promise.all(project.data.gallery.map(img => getImage({ src: img, format: 'webp' })));
  }

  return {
    ...project,
    optimized: {
      thumbnail: fixPath(thumbnail.src),
      banner: fixPath(banner.src),
      brandLogo: brandLogo ? fixPath(brandLogo.src) : null,
      gallery: gallery.map(img => fixPath(img.src)),
      carousel: [fixPath(banner.src), ...gallery.map(img => fixPath(img.src))]
    }
  };
}));
---

<section id="projects" class="px-4 py-20 max-w-6xl mx-auto">
  <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-12 text-center">Projects</h2>

  <!-- Grid Layout -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {projects.map((project) => (
      <div 
        class="group cursor-pointer bg-white dark:bg-gray-800 rounded-2xl overflow-hidden isolate transform-gpu fix-clipping shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
        data-project-id={project.slug}
      >
        <!-- Thumbnail Container -->
        <div class="relative aspect-video overflow-hidden rounded-t-2xl isolate fix-clipping">
          <img 
            src={project.optimized.thumbnail} 
            alt={project.data.title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 will-change-transform"
          />
          <!-- Category Badge -->
          <div class="absolute top-4 left-4">
            <span class="px-3 py-1 bg-white/90 dark:bg-gray-900/90 backdrop-blur-sm text-gray-800 dark:text-gray-200 text-xs font-bold rounded-lg uppercase tracking-wider">
              {project.data.category}
            </span>
          </div>
          <!-- Brand Logo Overlay (Optional) -->
          {project.data.brandLogo && (
            <div class="absolute bottom-4 right-4 w-12 h-12 bg-white rounded-xl p-2 shadow-lg border border-gray-100 flex items-center justify-center">
              <img src={project.optimized.brandLogo} alt={project.data.company} class="max-w-full max-h-full object-contain" />
            </div>
          )}
        </div>

        <!-- Card Content -->
        <div class="p-6">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors">
            {project.data.title}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2 mb-4">
            {project.data.description}
          </p>
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-2">
            {project.data.tags.slice(0, 3).map(tag => (
              <span class="px-2 py-0.5 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded-md text-xs font-medium">
                {tag}
              </span>
            ))}
            {project.data.tags.length > 3 && (
              <span class="text-xs text-gray-400 dark:text-gray-500 self-center">+{project.data.tags.length - 3}</span>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Modals -->
  {projects.map(async (project) => {
    const { Content } = await project.render();
    return (
      <div 
        id={`modal-${project.slug}`} 
        class="project-modal fixed inset-0 z-[100] items-center justify-center p-4 bg-black/60 backdrop-blur-md transition-opacity duration-300 opacity-0"
      >
        <div class="bg-white dark:bg-gray-900 w-full max-w-5xl max-h-[90vh] rounded-3xl overflow-hidden shadow-2xl flex flex-col relative transform scale-95 transition-transform duration-300">
          
          <!-- Close Button -->
          <button 
            class="close-modal absolute top-4 right-4 z-10 p-2 bg-black/20 hover:bg-black/40 text-white rounded-full transition-colors backdrop-blur-sm"
            aria-label="Close modal"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>

          <div class="overflow-y-auto custom-scrollbar">
            <!-- Banner Carousel -->
            <div 
              class="project-carousel w-full aspect-video md:aspect-[21/9] relative group/carousel" 
              data-images={JSON.stringify(project.optimized.carousel)}
            >
              <img 
                id={`hero-${project.slug}`}
                src={project.optimized.carousel[0]} 
                alt={project.data.title} 
                class="carousel-img w-full h-full object-cover transition-opacity duration-300"
              />

              {/* Navigation Arrows (Only if more than 1 image) */}
              {project.optimized.carousel.length > 1 && (
                <>
                  <button class="carousel-prev absolute left-4 top-1/2 -translate-y-1/2 p-3 rounded-full bg-black/20 hover:bg-black/40 text-white backdrop-blur-sm opacity-0 group-hover/carousel:opacity-100 transition-all -translate-x-4 group-hover/carousel:translate-x-0 outline-none" aria-label="Previous image">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                  </button>
                  <button class="carousel-next absolute right-4 top-1/2 -translate-y-1/2 p-3 rounded-full bg-black/20 hover:bg-black/40 text-white backdrop-blur-sm opacity-0 group-hover/carousel:opacity-100 transition-all translate-x-4 group-hover/carousel:translate-x-0 outline-none" aria-label="Next image">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </button>

                  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2.5 z-10">
                    {project.optimized.carousel.map((_, i) => (
                      <div 
                        class={`indicator-dot w-2 h-2 rounded-full transition-all duration-300 ${i === 0 ? 'bg-white scale-125' : 'bg-white/30'}`} 
                        data-index={i}
                      ></div>
                    ))}
                  </div>
                </>
              )}

              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent pointer-events-none flex items-end">
                <div class="p-8">
                  <span class="inline-block px-3 py-1 bg-white/20 backdrop-blur-md text-white border border-white/30 rounded-full text-xs font-bold uppercase tracking-widest mb-3">
                    {project.data.category}
                  </span>
                  <h2 class="text-3xl md:text-5xl font-bold text-white tracking-tight leading-tight">
                    {project.data.title}
                  </h2>
                </div>
              </div>
            </div>

            <!-- Content Area -->
            <div class="p-8 md:p-12">
              <div class="flex flex-col md:flex-row gap-8">
                <!-- Main Info -->
                <div class="md:w-3/4">
                  <div class="prose prose-lg dark:prose-invert max-w-none">
                    <Content />
                  </div>
                </div>

                <!-- Sidebar Details -->
                <div class="md:w-1/4 space-y-8">
                  <div>
                    <h4 class="text-xs font-bold text-gray-400 dark:text-gray-500 uppercase tracking-widest mb-4">Tech Stack</h4>
                    <div class="flex flex-wrap gap-2">
                      {project.data.tags.map(tag => (
                        <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg text-sm font-medium">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>

                  {project.data.company && (
                    <div>
                      <h4 class="text-xs font-bold text-gray-400 dark:text-gray-500 uppercase tracking-widest mb-4">Collaborated With</h4>
                      <div class="flex items-center gap-3">
                        {project.data.brandLogo && (
                          <img src={project.optimized.brandLogo} alt={project.data.company} class="w-12 h-12 object-contain rounded-xl bg-white border border-gray-100 p-2 shadow-sm" />
                        )}
                        <span class="text-gray-900 dark:text-white font-medium">{project.data.company}</span>
                      </div>
                    </div>
                  )}

                  <div class="flex flex-col gap-3 pt-4">
                    {project.data.githubUrl && (
                      <a 
                        href={project.data.githubUrl} 
                        target="_blank" 
                        class="flex items-center justify-center gap-2 px-6 py-3 bg-black dark:bg-white text-white dark:text-black rounded-xl font-bold hover:opacity-90 transition-opacity"
                      >
                        GitHub Repo
                      </a>
                    )}
                    {project.data.liveUrl && (
                      <a 
                        href={project.data.liveUrl} 
                        target="_blank" 
                        class="flex items-center justify-center gap-2 px-6 py-3 border border-gray-200 dark:border-gray-700 text-gray-900 dark:text-white rounded-xl font-bold hover:bg-gray-50 dark:hover:bg-gray-800 transition-all"
                      >
                        Launch Project
                      </a>
                    )}
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    );
  })}
</section>

<!-- Full-screen Lightbox Overlay -->
<div id="lightbox" class="fixed inset-0 z-[200] items-center justify-center bg-black/95 backdrop-blur-2xl opacity-0 transition-opacity duration-300">
  <button id="lightbox-close" class="absolute top-6 right-6 z-[220] p-4 text-white/50 hover:text-white transition-colors" aria-label="Close lightbox">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <button id="lightbox-prev" class="absolute left-6 top-1/2 -translate-y-1/2 p-5 rounded-full bg-white/5 hover:bg-white/10 text-white backdrop-blur-md transition-all outline-none z-[220]" aria-label="Previous image">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
  </button>

  <button id="lightbox-next" class="absolute right-6 top-1/2 -translate-y-1/2 p-5 rounded-full bg-white/5 hover:bg-white/10 text-white backdrop-blur-md transition-all outline-none z-[220]" aria-label="Next image">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </button>

  <div class="w-full h-full p-2 sm:p-4 md:p-12 flex items-center justify-center pointer-events-none">
    <img id="lightbox-img" src="" alt="Enlarged view" class="max-w-full max-h-full w-auto h-auto object-contain shadow-2xl pointer-events-auto" />
  </div>

  <div id="lightbox-dots" class="absolute bottom-10 left-1/2 -translate-x-1/2 flex gap-4 z-[220]">
    <!-- Dots generated by JS -->
  </div>
</div>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: transparent;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #e2e8f0;
    border-radius: 10px;
  }
  .dark .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #334155;
  }
  
  .project-modal, #lightbox {
    display: none;
    opacity: 0;
  }
  .project-modal.show, #lightbox.show {
    display: flex;
    opacity: 1;
  }
  .project-modal.show > div {
    transform: scale(1);
  }

  /* Robust fix for rounded corner clipping during transitions/transforms */
  .fix-clipping {
    -webkit-mask-image: -webkit-radial-gradient(white, white);
    mask-image: -webkit-radial-gradient(white, white);
    backface-visibility: hidden;
  }
  #lightbox.show img {
    transform: scale(1);
    opacity: 1;
  }
  #lightbox img {
    transform: scale(0.95);
    opacity: 0;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1), opacity 0.4s ease-out;
  }

  /* Mobile Landscape / Short Screens */
  @media (max-height: 480px) {
    #lightbox > div:first-of-type {
      padding: 0.5rem !important;
    }
    #lightbox-dots {
      display: none;
    }
    #lightbox-prev, #lightbox-next {
      background: rgba(0,0,0,0.3);
      padding: 0.75rem !important;
    }
    #lightbox-prev svg, #lightbox-next svg {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
</style>

<script is:inline>
  // Global Keyboard Handler
  window.addEventListener('keydown', (e) => {
    const lightbox = document.getElementById('lightbox');
    const projectModal = document.querySelector('.project-modal.show');
    
    // 1. Lightbox Layer (Topmost)
    if (lightbox && lightbox.classList.contains('show')) {
      if (e.key === 'Escape') {
        lightbox.classList.remove('show');
        return;
      }
      if (e.key === 'ArrowLeft' && window.prevLightbox) window.prevLightbox();
      if (e.key === 'ArrowRight' && window.nextLightbox) window.nextLightbox();
      return; // Stop here if lightbox is active
    }

    // 2. Project Modal Layer
    if (projectModal) {
      if (e.key === 'Escape') {
        projectModal.classList.remove('show');
        document.body.style.overflow = '';
        return;
      }
      
      // Find the carousel inside this specific open modal
      const carousel = projectModal.querySelector('.project-carousel');
      if (carousel) {
        if (e.key === 'ArrowLeft') carousel.querySelector('.carousel-prev')?.click();
        if (e.key === 'ArrowRight') carousel.querySelector('.carousel-next')?.click();
      }

      // 3. Scrolling Logic for Modal Content
      const scrollContainer = projectModal.querySelector('.custom-scrollbar');
      if (scrollContainer) {
        const step = 150;
        const pageStep = 400;
        
        if (e.key === 'ArrowDown') {
          e.preventDefault();
          scrollContainer.scrollBy({ top: step, behavior: 'smooth' });
        } else if (e.key === 'ArrowUp') {
          e.preventDefault();
          scrollContainer.scrollBy({ top: -step, behavior: 'smooth' });
        } else if (e.key === ' ' && !e.shiftKey) {
          e.preventDefault();
          scrollContainer.scrollBy({ top: pageStep, behavior: 'smooth' });
        } else if (e.key === ' ' && e.shiftKey) {
          e.preventDefault();
          scrollContainer.scrollBy({ top: -pageStep, behavior: 'smooth' });
        }
      }
    }
  });

  // 1. Core Logic for opening/closing modals 
  const initProjectModals = () => {
    const body = document.body;
    const gridCards = document.querySelectorAll('[data-project-id]');
    
    const closeModal = (modal) => {
      if (!modal) return;
      modal.classList.remove('show');
      body.style.overflow = '';
    };

    gridCards.forEach(card => {
      card.onclick = () => {
        const id = card.getAttribute('data-project-id');
        const modal = document.getElementById('modal-' + id);
        if (modal) {
          modal.classList.add('show');
          body.style.overflow = 'hidden';
        }
      };
    });

    document.querySelectorAll('.project-modal').forEach(modal => {
      modal.onclick = (e) => { if (e.target === modal) closeModal(modal); };
      const closeBtn = modal.querySelector('.close-modal');
      if (closeBtn) closeBtn.onclick = () => closeModal(modal);
    });
  };

  // 2. Carousel navigation logic
  const initCarousels = () => {
    document.querySelectorAll('.project-carousel').forEach(carousel => {
      const imagesAttr = carousel.getAttribute('data-images');
      if (!imagesAttr) return;
      const images = JSON.parse(imagesAttr);
      if (images.length <= 1) return;

      const imgElement = carousel.querySelector('.carousel-img');
      const dots = carousel.querySelectorAll('.indicator-dot');
      const prevBtn = carousel.querySelector('.carousel-prev');
      const nextBtn = carousel.querySelector('.carousel-next');
      let currentIndex = 0;

      const updateCarousel = (newIndex) => {
        currentIndex = (newIndex + images.length) % images.length;
        if (imgElement) imgElement.style.opacity = '0';
        setTimeout(() => {
          if (imgElement) {
            imgElement.src = images[currentIndex];
            imgElement.style.opacity = '1';
          }
          dots.forEach((dot, i) => {
            dot.classList.toggle('bg-white', i === currentIndex);
            dot.classList.toggle('scale-125', i === currentIndex);
            dot.classList.toggle('bg-white/30', i !== currentIndex);
          });
        }, 250);
      };

      if (prevBtn) prevBtn.onclick = (e) => { e.stopPropagation(); updateCarousel(currentIndex - 1); };
      if (nextBtn) nextBtn.onclick = (e) => { e.stopPropagation(); updateCarousel(currentIndex + 1); };

      if (imgElement) {
        imgElement.onclick = () => {
          if (window.openLightbox) window.openLightbox(images, currentIndex, (idx) => updateCarousel(idx));
        };
      }
    });
  };

  // 3. Lightbox Logic
  const initLightbox = () => {
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img');
    const lightboxDots = document.getElementById('lightbox-dots');
    const lightboxPrev = document.getElementById('lightbox-prev');
    const lightboxNext = document.getElementById('lightbox-next');
    const lightboxClose = document.getElementById('lightbox-close');
    let currentImages = [];
    let currentIndex = 0;
    let updateCallback = null;

    window.openLightbox = (images, index, callback) => {
      currentImages = images;
      currentIndex = index;
      updateCallback = callback;
      if (lightboxDots) {
        lightboxDots.innerHTML = images.map((_, i) => `<div class="lightbox-dot w-2.5 h-2.5 rounded-full transition-all duration-300" data-index="${i}"></div>`).join('');
      }
      updateLightboxView(index);
      lightbox.classList.add('show');
    };

    const updateLightboxView = (newIdx) => {
      if (currentImages.length === 0) return;
      currentIndex = (newIdx + currentImages.length) % currentImages.length;
      if (lightboxImg) lightboxImg.style.opacity = '0';
      setTimeout(() => {
        if (lightboxImg) {
          lightboxImg.src = currentImages[currentIndex];
          lightboxImg.style.opacity = '1';
        }
        if (lightboxDots) {
          lightboxDots.querySelectorAll('.lightbox-dot').forEach((dot, i) => {
            dot.classList.toggle('bg-white', i === currentIndex);
            dot.classList.toggle('scale-125', i === currentIndex);
            dot.classList.toggle('bg-white/30', i !== currentIndex);
          });
        }
        if (updateCallback) updateCallback(currentIndex);
      }, 150);
    };

    window.prevLightbox = () => updateLightboxView(currentIndex - 1);
    window.nextLightbox = () => updateLightboxView(currentIndex + 1);

    if (lightboxPrev) lightboxPrev.onclick = (e) => { e.stopPropagation(); window.prevLightbox(); };
    if (lightboxNext) lightboxNext.onclick = (e) => { e.stopPropagation(); window.nextLightbox(); };
    if (lightboxClose) lightboxClose.onclick = () => lightbox.classList.remove('show');
    if (lightbox) lightbox.onclick = (e) => { if (e.target === lightbox) lightbox.classList.remove('show'); };
  };

  // 4. Background Preloader
  const initPreloader = () => {
    const urls = new Set();
    document.querySelectorAll('.project-carousel').forEach(c => {
      try { JSON.parse(c.getAttribute('data-images') || '[]').forEach(u => u && urls.add(u)); } catch(e) {}
    });
    setTimeout(() => {
      urls.forEach(url => { const img = new Image(); img.src = url; });
    }, 3000);
  };

  // Run all
  initProjectModals();
  initCarousels();
  initLightbox();
  initPreloader();
</script>
