---
import resumeUrl from '../Alvaro-Cervan-Resume-2026.pdf';

// Helper to make paths relative so they work when opening the HTML file directly
const fixPath = (path) => path.startsWith('/') ? path.slice(1) : path;
const resumeLink = fixPath(resumeUrl);
---

<section id="contact" class="px-4 py-20 bg-gray-50 dark:bg-gray-800/50 text-center">
  <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8">Get In Touch</h2>
  <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-10 text-lg">
    I'm always open to discussing new projects, creative ideas or opportunities to be part of your visions.
  </p>
  
  <div class="mb-12">
    <a
      href={resumeLink}
      download="Alvaro-Cervan-Resume-2026.pdf"
      class="inline-flex items-center gap-3 px-10 py-5 bg-black dark:bg-white text-white dark:text-gray-900 rounded-2xl shadow-xl hover:scale-105 hover:bg-gray-800 dark:hover:bg-gray-100 transition-all font-bold text-xl"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2" />
        <path d="M7 11l5 5l5 -5" />
        <path d="M12 4l0 12" />
      </svg>
      Download Resume
    </a>
  </div>
  
  <div class="flex flex-col md:flex-row justify-center items-center gap-4">
    <a
      href="mailto:acervancanton@gmail.com"
      class="flex items-center gap-3 px-6 py-4 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md hover:border-gray-200 dark:hover:border-gray-600 transition-all"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700 dark:text-gray-300" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg>
      <span class="text-lg font-medium text-gray-900 dark:text-white">acervancanton@gmail.com</span>
    </a>

    <div class="flex gap-4">
      <a
        href="https://www.linkedin.com/in/alvaro-cervan-canton-1085551b3/"
        target="_blank"
        rel="noopener noreferrer"
        class="p-4 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md hover:border-gray-200 dark:hover:border-gray-600 transition-all"
        aria-label="LinkedIn"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700 dark:text-gray-300" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" /><path d="M8 11l0 5" /><path d="M8 8l0 .01" /><path d="M12 16l0 -5" /><path d="M16 16v-3a2 2 0 0 0 -4 0" /></svg>
      </a>
      <a
        href="https://github.com/JackGraymer"
        target="_blank"
        rel="noopener noreferrer"
        class="p-4 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md hover:border-gray-200 dark:hover:border-gray-600 transition-all"
        aria-label="GitHub"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700 dark:text-gray-300" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
      </a>
    </div>
  </div>
</section>
